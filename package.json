{
  "name": "glint-ui",
  "private": true,
  "version": "0.0.2",
  "description": "a React component library",
  "scripts": {
    "install:all": "pnpm -r install",
    "watch": "pnpm --filter=@glint-ui/react dev",
    "dev": "pnpm run watch --onSuccess \"pnpm  --filter=demo  dev\"",
    "build": "pnpm --filter=@glint-ui/react build",
    "lint": "pnpm --filter=@glint-ui/react lint",
    "lint:fix": "pnpm --filter=@glint-ui/react lint:fix",
    "pre-commit": "pnpm run --filter=@glint-ui/react pre-commit",
    "prepare": "husky install",
    "postinstall": "pnpm prepare"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.2.0",
    "@commitlint/config-conventional": "^19.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2"
  },
  "dependencies": {
    "@glint-ui/react": "workspace:^"
  }
}
